<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f2f2f2"
        android:clipToPadding="false"
        android:fitsSystemWindows="true"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/green">
            <ImageView
                android:id="@+id/img_bar_left"
                android:layout_width="44dp"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/selector_icon_back" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txt_title_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="5月"
                    android:textColor="#ffffff"
                    android:textSize="24sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/txt_title_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="2016"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:visibility="gone" />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/txt_title"
                android:textSize="16sp"
                android:layout_marginLeft="44dp"
                android:layout_marginRight="44dp"
                android:layout_centerInParent="true"
                android:text="记录"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="#ffffff"
                android:ellipsize="end"/>
            <ImageView
                android:id="@+id/img_bar_right"
                android:layout_width="44dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:padding="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/selector_icon_rili" />
        </RelativeLayout>
        <com.example.administrator.take_two.moneylist.widget.FrameLayout
            android:id="@+id/frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:visibility="gone"/>
            <RelativeLayout
                android:id="@+id/list_rili"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">
                <include layout="@layout/layout_calendar" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/list_leibiao"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <View
                    android:layout_width="3dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30dp"
                    android:background="#e6e6e6" />
                <lib.xlistview.XListView
                    android:id="@+id/lv_data"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:cacheColorHint="#00000000"
                    android:divider="@null"
                    android:dividerHeight="5dp"
                    android:listSelector="#00000000"
                    android:scrollbars="none" />
            </RelativeLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/btn_left"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:background="@drawable/shape_circle_green_a"
        android:padding="10dp"
        android:scaleType="centerInside"
        android:src="@drawable/selector_icon_edit" />
    <ImageView
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:background="@drawable/shape_circle_green_a"
        android:onClick="goEchart"
        android:padding="10dp"
        android:scaleType="centerInside"
        android:src="@drawable/icon_tubiao"
        android:visibility="gone" />
</RelativeLayout>