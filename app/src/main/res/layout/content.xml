<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/bar_main"
    android:background="#f2f2f2"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="82dp"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/lay_rect_1"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="#ece3ee"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="41dp"
                    android:layout_marginTop="5dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#5c5c5c"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="个人支出/收入统计"
                        android:textSize="16sp"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="41dp"
                    android:layout_height="82dp"
                    android:src="@drawable/icon_func_right_1"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/img_1"
                android:layout_width="82dp"
                android:layout_height="82dp"
                android:src="@drawable/one"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="82dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/lay_rect_2"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="41dp"
                    android:layout_marginTop="5dp"
                    android:background="#ece3ee">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#5c5c5c"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="集体费用类型"
                        android:textSize="16sp"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="41dp"
                    android:layout_height="82dp"
                    android:src="@drawable/icon_func_right_2" />
            </LinearLayout>
            <ImageView
                android:id="@+id/img_2"
                android:layout_width="82dp"
                android:layout_height="82dp"
                android:src="@drawable/two"
                />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:layout_marginTop="100dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="有任何问题，请联系QQ："
            android:textColor="#808080"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="717557150"
            android:textColor="#f07755"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>